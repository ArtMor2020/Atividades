        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDestinationAirportNavigation.Id)
        </dd>
        <dt class="col-sm-2">
            Flight Navigation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFlightNavigation.Id)
