    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Layover</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Exit Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExitTime)
        </dd>
        <dt class="col-sm-2">
            Estimated Arrival Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstimatedArrivalTime)
        </dd>
        <dt class="col-sm-2">
